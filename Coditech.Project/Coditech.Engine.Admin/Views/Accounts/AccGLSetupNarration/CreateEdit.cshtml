@model AccGLSetupNarrationViewModel
@{
    ViewBag.Title = Model.AccGLSetupNarrationId > 0 ? "Update Account Narration" : "Add Account Narration";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    DropdownViewModel centreDropdown = new DropdownViewModel() { DropdownType = DropdownTypeEnum.AccessibleCentre.ToString(), DropdownName = "CentreCode", DropdownSelectedValue = Model.CentreCode,};
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.AccGLSetupNarrationId > 0)
                                {
                                    <h4 class="card-title">
                                        Update Narration Details : @(Model.IsSystemGenerated ? "Live Mode" : "Test Mode")
                                    </h4>
                                }
                                else
                                {
                                    <h4 class="card-title">
                                        Create Narration Details : @(Model.IsSystemGenerated ? "Live Mode" : "Test Mode")
                                    </h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.AccGLSetupNarrationId)
                            @* @Html.HiddenFor(m => m.PaymentGatewayDetailId) *@
                            @* @Html.HiddenFor(m => m.CentreCode) *@
                            @* @Html.HiddenFor(m => m.IsLiveMode) *@
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.CentreCode, new { @class = "form-label required" })
                                        @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", centreDropdown)
                                        @Html.ValidationMessageFor(x => x.CentreCode)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.NarrationType, new { @class = "form-label " })
                                        @Html.TextBoxFor(x => x.NarrationType, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.NarrationType)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.NarrationDescription, new { @class = "form-label " })
                                        @Html.TextBoxFor(x => x.NarrationDescription, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.NarrationDescription)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsActive, new { @class = "form-label " })
                                        @Html.TextBoxFor(x => x.IsActive, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.IsActive)
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsSystemGenerated, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsSystemGenerated, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/Cancel?SelectedCentreCode=@Model.CentreCode=@Model.AccGLSetupNarrationId" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>












