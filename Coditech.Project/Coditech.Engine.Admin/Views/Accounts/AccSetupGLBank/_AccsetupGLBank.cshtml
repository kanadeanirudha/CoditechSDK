@model AccSetupGLBankViewModel
@{
    Layout = null;
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<div class="card-body">
    @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
    {
        @Html.HiddenFor(m => m.AccSetupGLBankId)
        @Html.HiddenFor(m => m.BankModelData)

        <div class="row">
            <div class="col-lg-4">
                <div class="mb-3">
                    @Html.LabelFor(x => x.BankAccountName, new { @class = "form-label required" })
                    @Html.TextBoxFor(x => x.BankAccountName, new { @class = "form-control", @onkeypress = "return CoditechCommon.AllowOnlyAlphabetWithouSpacing()" })
                    <span class="text-danger" data-valmsg-for="BankAccountName"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="mb-3">
                    @Html.LabelFor(x => x.BankAccountNumber, new { @class = "form-label required" })
                    @Html.TextBoxFor(x => x.BankAccountNumber, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "20" })
                    <span class="text-danger" data-valmsg-for="BankAccountNumber"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="mb-3">
                    @Html.LabelFor(x => x.BankBranchName, new { @class = "form-label required" })
                    @Html.TextBoxFor(x => x.BankBranchName, new { @class = "form-control"})
                    <span class="text-danger" data-valmsg-for="BankBranchName"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="mb-3">
                    @Html.LabelFor(x => x.IFSCCode, new { @class = "form-label required" })
                    @Html.TextBoxFor(x => x.IFSCCode, new { @class = "form-control", @onkeypress = "return CoditechCommon.AvoidSpacingAndSpecialCharacters()", @maxlength = "11" })
                    <span class="text-danger" data-valmsg-for="IFSCCode"></span>
                </div>
            </div>
        </div>

    }
</div>
<script src="~/js/coditech/Common/CoditechCommon.js"></script>