@using Coditech.Admin.Utilities;
@model DBTMPrivacySettingViewModel
@{
    ViewBag.Title = Model.DBTMPrivacySettingId > 0 ? "Update DBTMPrivacySetting" : "Add DBTMPrivacySetting";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    DropdownViewModel centreDropdown = new DropdownViewModel() { DropdownType = DropdownTypeEnum.AccessibleCentre.ToString(), DropdownName = "CentreCode", DropdownSelectedValue = Model.CentreCode, ChangeEvent = "", IsDisabled = Model.DBTMPrivacySettingId > 0 };
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.DBTMPrivacySettingId > 0)
                                {
                                    <h4 class="card-title">Update Privacy Setting</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create Privacy Setting</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            if (Model.DBTMPrivacySettingId > 0)
                            {
                                @Html.HiddenFor(m => m.CentreCode)
                            }
                            @Html.HiddenFor(m => m.DBTMPrivacySettingId)
                            <div class="col-lg-8">
                                <div class="mb-3">
                                    @Html.LabelFor(x => x.CentreCode, new { @class = "form-label required" })
                                    @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", centreDropdown)
                                    @Html.ValidationMessageFor(x => x.CentreCode)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsNotificationOn, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsNotificationOn, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsLocationOn, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsLocationOn, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/Cancel?SelectedCentreCode=@Model.CentreCode" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


