@model DBTMActivityCategoryViewModel
@{
    ViewBag.Title = Model.DBTMActivityCategoryId > 0 ? "Update Activity Category" : "Add Activity Category";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    DropdownViewModel dBTMParentActivityCategorys = new DropdownViewModel() { DropdownType = DropdownCustomTypeEnum.DBTMActivityCategory.ToString(), DropdownName = "DBTMParentActivityCategoryId", DropdownSelectedValue = Model.DBTMParentActivityCategoryId.ToString(), ChangeEvent = "", Parameter = Model.DBTMActivityCategoryId.ToString(), IsRequired = false, IsCustomDropdown = true };
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.DBTMActivityCategoryId > 0)
                                {
                                    <h4 class="card-title">Update Activity Category</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create Activity Category</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.DBTMActivityCategoryId)
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.ActivityCategoryName, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.ActivityCategoryName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.ActivityCategoryName)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.ActivityCategoryCode, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.ActivityCategoryCode, new { @class = "form-control", @onkeypress = "return CoditechCommon.AvoidSpacing()" })
                                        @Html.ValidationMessageFor(x => x.ActivityCategoryCode)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.DBTMParentActivityCategoryId, new { @class = "form-label" })
                                        @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", dBTMParentActivityCategorys)
                                        @Html.ValidationMessageFor(x => x.DBTMParentActivityCategoryId)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsActive, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
