@model DBTMActivitiesDetailsListViewModel
@{
    Layout = null;
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    string css = "";
}

<div class="row">
    @Html.Partial("~/Views/Shared/Datatable/_DatatableShowResult.cshtml", Model.PageListViewModel.RecordPerPage)
    @Html.Partial("~/Views/Shared/Datatable/_DatatableSearchData.cshtml", Model.PageListViewModel.SearchBy)
</div>

<div class="row">
    <div class="col-sm-12 table-responsive">
        <table id="datatable" class="action-set table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
            @Html.Partial("~/Views/Shared/Datatable/_DatatableColumns.cshtml", Model.PageListViewModel)
            @Html.HiddenFor(x => x.SelectedParameter1)
            <tbody>
                @if (Model?.ActivitiesDetailsList?.Count > 0)
                {
                    foreach (var item in Model?.ActivitiesDetailsList)
                    {
                        <tr>
                            @foreach (var item1 in Model.TestColumns)
                            {
                                if (item1 == "Time")
                                {
                                    <td>@item.Time sec</td>
                                }
                                else if (item1 == "Distance")
                                {
                                    <td>@Math.Round(item.Distance, 2) m</td>
                                }
                                else if (item1 == "Force")
                                {
                                    <td>@item.Force</td>
                                }
                                else if (item1 == "Acceleration")
                                {
                                    <td>@item.Acceleration</td>
                                }
                                else if (item1 == "Angle")
                                {
                                    <td>@item.Angle</td>
                                }
                            }
                            @foreach (var item1 in Model.CalculationColumns)
                            {
                                if (item1 == "CompletionTime")
                                {
                                    <td>@item.CompletionTime Sec</td>
                                }
                                else if (item1 == "Velocity")
                                {
                                    <td>@Math.Round(item.Velocity, 2) m/s</td>
                                }
                                else if (item1 == "AverageVelocity")
                                {
                                    <td>@Math.Round(item.AverageVelocity, 2) m/s</td>
                                }
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div hidden>
    @Html.Partial("~/Views/Shared/Datatable/_DatatablePagination.cshtml", Model.PageListViewModel)
</div>