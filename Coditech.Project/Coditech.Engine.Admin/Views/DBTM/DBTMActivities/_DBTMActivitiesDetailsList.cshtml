@using System.Data;
@model DBTMActivitiesDetailsListViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-sm-12 table-responsive">
        <table id="datatable" class="action-set table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
            @Html.HiddenFor(x => x.SelectedParameter1)
            @if (Model?.DataTable?.Rows?.Count > 0)
            {
                <thead>
                    <tr role="row">
                        @foreach (DataColumn datatableColumn in Model?.DataTable.Columns)
                        {
                            <th>@datatableColumn</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model?.DataTable.Rows)
                    {
                        <tr>
                            @foreach (DataColumn col in Model?.DataTable.Columns)
                            {
                                <td>@row[col]</td>
                            }
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>
