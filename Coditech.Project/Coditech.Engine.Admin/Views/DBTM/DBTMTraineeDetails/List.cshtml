@model DBTMTraineeDetailsListViewModel
@{
    ViewBag.Title = "All Trainee Details List";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    DropdownViewModel centreDropdown = new DropdownViewModel() { DropdownType = DropdownTypeEnum.AccessibleCentre.ToString(), DropdownName = "SelectedCentreCode", DropdownSelectedValue = Model.SelectedCentreCode, ChangeEvent = "DBTMTraineeDetails.GetDBTMTrainerListByCentreCode()" };
    DropdownViewModel trainerDropdown = new DropdownViewModel() { DropdownType = DropdownCustomTypeEnum.CentrewiseDBTMTrainer.ToString(), DropdownName = "SelectedParameter1", Parameter = Model.SelectedCentreCode, DropdownSelectedValue = Convert.ToString(Model.GeneralTrainerMasterId), ChangeEvent = "DBTMTraineeDetails.GetDBTMTrainerListByGeneralTrainerMasterId('" + @controllerName + "','" + @actionName + "')", IsCustomDropdown = true };
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        @if (Model.ListType == "Active")
                        {
                            <span class="card-title">Active Trainee List</span>
                        }
                        else if (Model.ListType == "InActive")
                        {
                            <span class="card-title">InActive Trainee List</span>
                        }
                        else
                        {
                            <span class="card-title">All Trainee Details List</span>
                        }
                        <a class=" btn btn-sm btn-soft-primary float-end" href="/@controllerName/CreateDBTMTrainee" role="button"><i class="fas fa-plus me-2"></i>Add Trainee</a>
                    </div>
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-1">
                                <label>@AdminResources.LabelCentre</label>
                            </div>
                            <div class="col-md-4">
                                @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", centreDropdown)
                            </div>
                            <div class="col-md-1">
                                <label>Trainer</label>
                            </div>
                            <div class="col-md-3">
                                @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", trainerDropdown)
                            </div>
                            <div class="col-md-1">
                               @*  <input type="button" class="btn btn-success" value="Show" id="ShowDataId" onclick="CoditechCommon.LoadListByCentreCode('@controllerName','@actionName')" /> *@
                                <input type="button" class="btn btn-success" value="Show" id="ShowDataId" onclick="DBTMTraineeDetails.GetDBTMTrainerListByGeneralTrainerMasterId('@controllerName','@actionName')" />
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="DataTablesDivId" class="dataTables_wrapper dt-bootstrap5 no-footer">
                            @Html.Partial("~/Views/DBTM/DBTMTraineeDetails/_List.cshtml", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/coditech/DBTM/DBTMTraineeDetails.js"></script>