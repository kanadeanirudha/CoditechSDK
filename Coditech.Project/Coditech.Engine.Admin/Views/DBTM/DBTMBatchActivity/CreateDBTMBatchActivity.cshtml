@model DBTMBatchActivityViewModel
@{
    ViewBag.Title = "Create DBTM Batch Activity";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->

<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h4 class="card-title">DBTM Batch Activity : @Model.BatchName</h4>
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.DBTMBatchActivityId)
                            @Html.HiddenFor(x => x.GeneralBatchMasterId)
                            @Html.HiddenFor(m => m.BatchName)
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.DBTMTestMasterId, new { @class = "form-label required" })
                                        @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
                               {
                                   DropdownType = DropdownCustomTypeEnum.DBTMBatchActivity.ToString(),
                                   DropdownName = "DBTMTestMasterId",
                                   DropdownSelectedValue = Model.DBTMTestMasterId.ToString(),
                                   Parameter = $"{Model.GeneralBatchMasterId}~false",
                                   IsCustomDropdown = true
                               })
                                        @Html.ValidationMessageFor(x => x.DBTMTestMasterId)
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/GetDBTMBatchActivityList?SelectedParameter1=@Model.GeneralBatchMasterId" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


