@model DBTMSubscriptionPlanViewModel
@{
    ViewBag.Title = Model.DBTMSubscriptionPlanId > 0 ? "Update Plan Details" : "Add Plan";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    string css = Model.DBTMSubscriptionPlanId > 0 ? "col-lg-10" : "col-lg-12";
    Dictionary<string, string> keyValuePairs = new Dictionary<string, string>();
    keyValuePairs.Add("DBTMSubscriptionPlanId", Model.DBTMSubscriptionPlanId.ToString());
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            @*  <div class="col-lg-12"> *@
            @if (Model.DBTMSubscriptionPlanId > 0)
            {
                <div class="col-lg-2">
                    @Html.Partial("~/Views/DBTM/DBTMSubscriptionPlan/_DBTMSubscriptionPlanSidePannel.cshtml", keyValuePairs)
                </div>
            }
            <div class="@css">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.DBTMSubscriptionPlanId > 0)
                                {
                                    <h4 class="card-title">Update Plan Details</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create Plan</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.DBTMSubscriptionPlanId)
                                                        
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.SubscriptionPlanTypeEnumId, new { @class = "form-label required" })
                                        @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
                               {
                                   DropdownSelectedValue = Model.SubscriptionPlanTypeEnumId.ToString(),
                                   DropdownName = "SubscriptionPlanTypeEnumId",
                               GroupCode = DropdownCustomTypeEnum.DBTMSubscriptionPlanType.ToString(),
                                   AddSelectItem = true,
                                   IsDisabled = Model.DBTMSubscriptionPlanId > 0,
                               })
                                        @Html.ValidationMessageFor(x => x.SubscriptionPlanTypeEnumId, null, new { id = "errorPlanTypeEnumId" })
                                        @if (Model.DBTMSubscriptionPlanId > 0)
                                        {
                                            @Html.HiddenFor(m => m.SubscriptionPlanTypeEnumId)
                                        }
                                    </div>
                                </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.PlanName, new { @class = "form-label required" })
                                        @if (Model.DBTMSubscriptionPlanId > 0)
                                        {
                                            @Html.TextBoxFor(x => x.PlanName, new { @class = "form-control", @readonly = "readonly" })
                                        }
                                        else
                                        {
                                            @Html.TextBoxFor(x => x.PlanName, new { @class = "form-control" })
                                        }
                                        @Html.ValidationMessageFor(x => x.PlanName)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.DurationInDays, new { @class = "form-label required" })
                                        @if (Model.DBTMSubscriptionPlanId > 0)
                                        {
                                            @Html.TextBoxFor(x => x.DurationInDays, new { @class = "form-control", @readonly = "readonly" })
                                        }
                                        else
                                        {
                                        @Html.TextBoxFor(x => x.DurationInDays, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()" })
                                        }
                                        @Html.ValidationMessageFor(x => x.DurationInDays)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.PlanCost, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.PlanCost, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()" })
                                        @Html.ValidationMessageFor(x => x.PlanCost)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.PlanDiscount, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.PlanDiscount, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()" })
                                        @Html.ValidationMessageFor(x => x.PlanDiscount)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsActive, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsTaxExclusive, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsTaxExclusive, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
