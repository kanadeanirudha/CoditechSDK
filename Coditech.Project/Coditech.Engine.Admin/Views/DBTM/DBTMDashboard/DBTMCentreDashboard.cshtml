@using Coditech.Admin.Utilities;
@using Coditech.Common.API.Model;
@using Newtonsoft.Json
@model DBTMDashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    CalendarViewModel calendarViewModel = new CalendarViewModel();
}
<div class="page-content">
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">
                        <div class="col">
                        </div>
                        <div class="col-auto align-self-center">
                            <a href="#" class="btn btn-sm btn-outline-primary" id="Dash_Date">
                                <span class="day-name" id="Day_Name">Today:</span>&nbsp;
                                <span class="" id="Select_date">@System.DateTime.Now.ToCoditechDateFormat()</span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar align-self-center icon-xs ms-1"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                            </a>
                        </div>
                    </div>
                </div><!--end page-title-box-->
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-3">
                <a href="/GeneralTrainerMaster/list">
                    <div class="card report-card">
                        <div class="card-body">
                            <div class="row d-flex justify-content-center">
                                <div class="col">
                                    <p class="text-dark mb-0 fw-semibold">Number Of Trainers</p>
                                    <h3 class="m-0">@Model.NumberOfTrainers</h3>
                                    <p class="mb-0 text-truncate text-muted">&nbsp;</p>
                                </div>
                                <div class="col-auto align-self-center">
                                    <div class="report-main-icon bg-light-alt">
                                        <i class="fas fa-user-check"></i>
                                    </div>
                                </div>
                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </a>
            </div>
            <div class="col-md-6 col-lg-3">
                <a href="/DBTMTraineeDetails/list">
                    <div class="card report-card">
                        <div class="card-body">
                            <div class="row d-flex justify-content-center">
                                <div class="col">
                                    <p class="text-dark mb-0 fw-semibold">Number Of Trainees</p>
                                    <h3 class="m-0">@Model.NumberOfTrainees</h3>
                                    <p class="mb-0 text-truncate text-muted">&nbsp;</p>
                                </div>
                                <div class="col-auto align-self-center">
                                    <div class="report-main-icon bg-light-alt">
                                        <i class="fas fa-user-minus"></i>
                                    </div>
                                </div>
                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </a>
            </div>
            <div class="col-md-6 col-lg-3">
                <a href="/DBTMTraineeAssignment/list">
                    <div class="card report-card">
                        <div class="card-body">
                            <div class="row d-flex justify-content-center">
                                <div class="col">
                                    <p class="text-dark mb-0 fw-semibold">Assignments</p>
                                    <h3 class="m-0">@Model.Assignments</h3>
                                    <p class="mb-0 text-truncate text-muted">&nbsp;</p> <!-- Add this for consistency -->
                                </div>
                                <div class="col-auto align-self-center">
                                    <div class="report-main-icon bg-light-alt">
                                        <i class="fas fa-user-friends"></i>
                                    </div>
                                </div>
                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </a>
            </div>
            <div id="calendar" class="row mb-3">
                <div class="col-lg-9">
                    <div class="text-center" style="position: relative; padding-top:0px !important">
                        @Html.Partial("~/Views/Shared/Calendar/_Calendar.cshtml", calendarViewModel)
                    </div><!--end card-body-->
                </div>
            </div><!--end row-->
        </div>
    </div><!-- container -->
</div>
