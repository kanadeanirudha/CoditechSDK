@model DropdownViewModel
@{
    if (Model.IsCustomDropdown)
    {
        CoditechCustomDropdownHelper.GeneralDropdownList(Model);
    }
    else
    {
        CoditechDropdownHelper.GeneralDropdownList(Model);
    }
    var htmlAttributes = new Dictionary<string, object>
    {
        { "class", "form-select select2-dropdown " + Model.ClassName },
        { "onchange", Model.ChangeEvent },
        { "id", Model.DropdownName }
    };
    if (Model.IsDisabled)
    {
        htmlAttributes["disabled"] = "disabled";
    }
}

@Html.DropDownList(Model.DropdownName, Model.DropdownList, htmlAttributes)