@model HTMLEditorViewModel
@{
    Layout = null;
}
<textarea id="@Model.EditorName" name="@Model.EditorName" class="form-control">@Model.EditorValue</textarea>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/summernote/popper.min.js"></script>
<script src="~/lib/summernote/bootstrap.min.js"></script>
<link href="~/lib/summernote/summernote-bs4.min.css" rel="stylesheet" />
<script src="~/lib/summernote/summernote-bs4.min.js"></script>
<script>
    $("#@Model.EditorName").summernote({
        height: 250,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'italic', 'underline', 'superscript', 'subscript', 'strikethrough', 'clear']],
            ['fontname', ['fontname']],
            ['fontsize', ['fontsize']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['height', ['height']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video', 'hr']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>
