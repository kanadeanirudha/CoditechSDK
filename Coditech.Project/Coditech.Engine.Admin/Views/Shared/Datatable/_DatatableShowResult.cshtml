@model int?
@{
    Layout = null;
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    List<int> showList = new List<int>();
    showList.Add(10);
    showList.Add(25);
    showList.Add(50);
    showList.Add(100);
}
<div class="col-sm-12 col-md-6">
    <div class="dataTables_length">
        <label>
            Show
            <select id="DataTables_PageSizeId" aria-controls="datatable" class="form-select form-select-sm" onchange="CoditechDataTable.LoadListFirst('@controllerName','@actionName')">
                @foreach (var i in showList)
                {
                    if (Model == i)
                    {
                        <option value="@i" selected>@i</option>
                    }
                    else
                    {
                        <option value="@i">@i</option>
                    }
                }
            </select> entries
        </label>
    </div>
</div>