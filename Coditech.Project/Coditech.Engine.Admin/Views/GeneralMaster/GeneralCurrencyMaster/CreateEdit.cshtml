@model GeneralCurrencyMasterViewModel
@{
    ViewBag.Title = Model.GeneralCurrencyMasterId > 0 ? "Update Currency" : "Add Currency";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.GeneralCurrencyMasterId > 0)
                                {
                                    <h4 class="card-title">Update Currency</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create Currency</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.GeneralCurrencyMasterId)
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.CurrencyName, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.CurrencyName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.CurrencyName)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.CurrencyCode, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.CurrencyCode, new { @class = "form-control", @onkeypress = "return CoditechCommon.AvoidSpacing()" })
                                        @Html.ValidationMessageFor(x => x.CurrencyCode)
                                    </div>
                               
                               
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.CurrencySymbol, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.CurrencySymbol, new { @class = "form-control", @onkeypress = "return CoditechCommon.AvoidSpacing()" })
                                        @Html.ValidationMessageFor(x => x.CurrencySymbol)
                                    </div>


                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Save</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>Cancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const input = document.getElementById("callingCodeInput");

        input.addEventListener("input", function () {
            // Allow only numbers and the '+' sign
            const validPattern = /^[0-9+]*$/;

            if (!validPattern.test(input.value)) {
                input.value = input.value.replace(/[^0-9+]/g, '');
            }
        });
    });
</script>