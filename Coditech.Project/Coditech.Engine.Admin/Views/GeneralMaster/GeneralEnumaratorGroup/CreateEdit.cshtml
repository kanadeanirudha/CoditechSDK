@model GeneralEnumaratorGroupViewModel
@{
    ViewBag.Title = Model.GeneralEnumaratorGroupId > 0 ? "Update Enum Group" : "Add Enum Group";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.GeneralEnumaratorGroupId > 0)
                                {
                                    <h4 class="card-title">Update Enum Group</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create  Enum Group</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.GeneralEnumaratorGroupId)
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.EnumGroupCode, new { @class = "form-label required" })
                                        @if (Model.GeneralEnumaratorGroupId > 0)
                                        {
                                            @Html.TextBoxFor(x => x.EnumGroupCode, new { @class = "form-control", @readonly = "true"})
                                        }
                                        else
                                        {
                                            @Html.TextBoxFor(x => x.EnumGroupCode, new { @class = "form-control", @onkeypress = "return CoditechCommon.AllowOnlyAlphabets()" })
                                        }
                                        @Html.ValidationMessageFor(x => x.EnumGroupCode)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.DisplayText, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.DisplayText, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.DisplayText)
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
        @if (Model.GeneralEnumaratorGroupId > 0)
        {
            @Html.Partial("~/Views/GeneralMaster/GeneralEnumaratorGroup/_GeneralEnumList.cshtml", Model)
        }
    </div>
</div>
