@model BioradMedisyMediaModel
@{
    ViewBag.Title = "View File Details";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">File Details</span>
                        <a class=" btn btn-sm btn-soft-secondary float-end" href="/MediaManager/index?SelectedParameter1=@Model.MediaFolderMasterId" role="button">
                            <i class="fas fa-arrow-left me-2"></i>Back
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <iframe src="@Model.Path" style="height:650px; width:100%"></iframe>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            @Html.Label("", "File Name: ", new { @class = "form-label" })
                                            @Html.DisplayFor(x => x.FileName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            @Html.Label("", "File Size: ", new { @class = "form-label" })
                                            @Html.DisplayFor(x => x.Size, new { @class = "form-control" }) KB
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            @Html.Label("", "File Type: ", new { @class = "form-label" })
                                            @Html.DisplayFor(x => x.Type, new { @class = "form-label" })
                                        </div>
                                    </div>
                                    @using (Html.BeginForm("Edit", controllerName, FormMethod.Post))
                                    {
                                        @Html.HiddenFor(m => m.MediaId)
                                        <div class="col-lg-12">
                                            <div class="mb-3">
                                                @Html.Label("", "File Status: ", new { @class = "form-label required" })
                                                @Html.DropDownList("TaskApprovalStatusEnumId", ViewData["BioradMedisyApprovalStatus"] as List<SelectListItem>, new { @class = "form-select" })
                                                @Html.ValidationMessageFor(x => x.TaskApprovalStatusEnumId)
                                            </div>
                                        </div>
                                        @if (Model.IsEditable)
                                        {
                                            <div class="col-lg-12">
                                                <div class="mb-3">
                                                    @Html.LabelFor(x => x.Comments, new { @class = "form-label required" })
                                                    @Html.TextAreaFor(x => x.Comments, new { @class = "form-control", @rows = "15" })
                                                    @Html.ValidationMessageFor(x => x.Comments)
                                                </div>
                                            </div>
                                        }
                                        <div class="col-lg-12">
                                            <div class="mb-3">
                                                @if (Model.IsEditable)
                                                {
                                                    <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                                                }
                                            </div>
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            @if (Model.IsEditable && Model.ApprovalSequenceNumber == 1 && Model.TaskApprovalStatusEnumCode != "Completed")
                            {
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <form asp-action="ReplaceFile" asp-controller="BioradMedisyMediaManager" enctype="multipart/form-data" method="post" style="display:inline;">
                                            <label class="btn btn-sm btn-soft-warning" for="imageUpload">
                                                <i class="fas fa-upload me-2"></i>Replace File
                                            </label>
                                            <input type="file" id="imageUpload" name="imageFile" style="display: none;" onchange="this.form.submit()" />
                                            <input type="hidden" name="MediaId" value="@Model.MediaId" />
                                            <input type="hidden" name="folderId" value="@Model.MediaFolderMasterId" />
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h3>File History</h3>
                                    <table class="action-set table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
                                        <thead>
                                            <tr>
                                                <th>User Name</th>
                                                <th>Status</th>
                                                <th>Current Status</th>
                                                <th>Changed Date</th>
                                                <th>Comments</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.FileHistoryList.Count > 0)
                                            {
                                                @foreach (var item in Model.FileHistoryList)
                                                {
                                                    <tr>
                                                        <td>@item.UserName</td>
                                                        <td style="text-align:center">
                                                            @Html.Partial("~/Views/Shared/Datatable/_DatatableStatusData.cshtml", new DataTableStatusViewModel() { Key = item.TaskApprovalStatusEnumCode, Value = item.TaskApprovalStatusDisplayName })
                                                        </td>
                                                        <td style="text-align:center">@Html.Partial("~/Views/Shared/Datatable/_DatatableTrueFalse.cshtml", @item.IsCurrentStatus)</td>
                                                        <td>@item.ChangeDate.ToCoditechDateWithTimeFormat()</td>
                                                        <td class="text-wrap">@item.Comments</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
