@model MediaSettingMasterViewModel
@{
    ViewBag.Title = Model.MediaSettingMasterId > 0 ? "Update Media Setting" : "Add Media Setting";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.MediaSettingMasterId > 0)
                                {
                                    <h4 class="card-title">Update @Model.MediaType Setting</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create @Model.MediaType Setting</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.MediaSettingMasterId)
                            @Html.HiddenFor(m => m.MediaTypeMasterId)
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.MaxSizeInMB, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.MaxSizeInMB, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "5", @max = "500" })
                                        @Html.ValidationMessageFor(x => x.MaxSizeInMB)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3 multiselect-dropdown">
                                        @Html.LabelFor(x => x.SelectedMediaTypeExtensionMasterIds, new { @class = "form-label required" })
                                        @Html.ListBoxFor(x => x.SelectedMediaTypeExtensionMasterIds, new SelectList(Model.MediaTypeExtensionList, "MediaTypeExtensionMasterId", "ExtensionName"), new { @class = "selectpicker form-control", multiple = "multiple" })
                                        @Html.ValidationMessageFor(x => x.SelectedMediaTypeExtensionMasterIds)
                                    </div>
                                </div>
                                @if (Model.MediaTypeMasterId == 1)
                                {
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            @Html.LabelFor(x => x.LargeImageResize, new { @class = "form-label required" })
                                            @Html.TextBoxFor(x => x.LargeImageResize, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "5" })
                                            @Html.ValidationMessageFor(x => x.LargeImageResize)
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            @Html.LabelFor(x => x.MediumImageResize, new { @class = "form-label required" })
                                            @Html.TextBoxFor(x => x.MediumImageResize, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "5" })
                                            @Html.ValidationMessageFor(x => x.MediumImageResize)
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            @Html.LabelFor(x => x.SmallImageResize, new { @class = "form-label required" })
                                            @Html.TextBoxFor(x => x.SmallImageResize, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "5" })
                                            @Html.ValidationMessageFor(x => x.SmallImageResize)
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            @Html.LabelFor(x => x.CrossSellImageResize, new { @class = "form-label required" })
                                            @Html.TextBoxFor(x => x.CrossSellImageResize, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "5" })
                                            @Html.ValidationMessageFor(x => x.CrossSellImageResize)
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            @Html.LabelFor(x => x.ThumbnailImageResize, new { @class = "form-label required" })
                                            @Html.TextBoxFor(x => x.ThumbnailImageResize, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "5" })
                                            @Html.ValidationMessageFor(x => x.ThumbnailImageResize)
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            @Html.LabelFor(x => x.SmallThumbnailImageResize, new { @class = "form-label required" })
                                            @Html.TextBoxFor(x => x.SmallThumbnailImageResize, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "5" })
                                            @Html.ValidationMessageFor(x => x.SmallThumbnailImageResize)
                                        </div>
                                    </div>
                                }
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.HelpDescription, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.HelpDescription, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.HelpDescription)
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
