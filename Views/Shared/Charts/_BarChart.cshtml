@model BarChartViewModel
@{
    Layout = null;
}
<canvas id="@Model.BarChartId"></canvas>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<script>
    var xValues = @Html.Raw(@Model.XValues);
    var yValues = @Html.Raw(Model.YValues);
    new Chart("@Model.BarChartId", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: "rgba(75, 192, 192, 0.2)",
                borderColor: "rgba(75, 192, 192, 1)",
                borderWidth: 1,
                data: yValues
            }]
        },
        options: {
            legend: { display: false },
            title: {
                display: true,
                text: '@Model.Title'
            },
            scales: {
                xAxes: [{
                    beginAtZero: true,
                    display: true,
                    gridLines: {
                        display: false,
                        drawBorder: true
                    },
                    scaleLabel: {
                        display: true,
                        labelString: '@Model.XAxisLabel'
                    }
                }],
                yAxes: [{
                    display: true,
                    beginAtZero: true,
                    gridLines: {
                        display: false,
                        drawBorder: true
                    },
                    scaleLabel: {
                        display: true,
                        labelString: '@Model.YAxisLabel'
                    }
                }]
            },
        }
    });
</script>