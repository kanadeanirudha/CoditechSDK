@model GeneralEnumaratorViewModel
@{
    ViewBag.Title = Model.GeneralEnumaratorId > 0 ? "Update Enum" : "Add Enum";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.GeneralEnumaratorId > 0)
                                {
                                    <h4 class="card-title">Update Enum</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create  Enum</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.GeneralEnumaratorGroupId)
                            @Html.HiddenFor(m => m.GeneralEnumaratorId)
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.EnumName, new { @class = "form-label required" })
                                        @if (Model.GeneralEnumaratorId > 0)
                                        {
                                            @Html.TextBoxFor(x => x.EnumName, new { @class = "form-control", @readonly = "true" })
                                        }
                                        else
                                        {
                                            @Html.TextBoxFor(x => x.EnumName, new { @class = "form-control", @onkeypress = "return CoditechCommon.AllowOnlyAlphabets()" })
                                        }
                                        @Html.ValidationMessageFor(x => x.EnumName)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.EnumDisplayText, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.EnumDisplayText, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.EnumDisplayText)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.EnumValue, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.EnumValue, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "3" })
                                        @Html.ValidationMessageFor(x => x.EnumValue)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.RelatedWith, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.RelatedWith, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.RelatedWith)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.SequenceNumber, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.SequenceNumber, new { @class = "form-control", @onkeypress = "return CoditechCommon.ValidNumeric()", @maxlength = "3" })
                                        @Html.ValidationMessageFor(x => x.SequenceNumber)
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsActive, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/Edit?generalEnumaratorGroupId=@Model.GeneralEnumaratorGroupId" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
