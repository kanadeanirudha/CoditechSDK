@model GeneralEnumaratorGroupViewModel
@{
    Layout = null;
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <span class="card-title">Enum List</span>
                <a class=" btn btn-sm btn-soft-primary float-end" href="/@controllerName/CreateEditEnumarator?generalEnumaratorGroupId=@Model.GeneralEnumaratorGroupId&generalEnumaratorId=0" role="button"><i class="fas fa-plus me-2"></i>Add Enum</a>
            </div>
            <div class="card-body">
                <div id="DataTablesDivId" class="dataTables_wrapper dt-bootstrap5 no-footer">
                    <div class="row">
                        <div class="col-sm-12 table-responsive">
                            <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr role="row">
                                        <th>Enum Name</th>
                                        <th>Display Text</th>
                                        <th>Related With</th>
                                        <th>Enum Value</th>
                                        <th>Sequence Number</th>
                                        <th>Is Active</th>
                                        <th class="text-center" style="width:10%;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model?.GeneralEnumaratorList?.Count > 0)
                                    {
                                        foreach (var item in Model?.GeneralEnumaratorList)
                                        {
                                            <tr>
                                                <td>@item.EnumName</td>
                                                <td>@item.EnumDisplayText</td>
                                                <td>@item.RelatedWith</td>
                                                <td>@item.EnumValue</td>
                                                <td>@item.SequenceNumber</td>
                                                <td class="text-center">@Html.Partial("~/Views/Shared/Datatable/_DatatableTrueFalse.cshtml", item.IsActive)</td>
                                                <td class="text-center">
                                                    <a href="../@controllerName/CreateEditEnumarator?generalEnumaratorGroupId=@item.GeneralEnumaratorGroupId&generalEnumaratorId=@item.GeneralEnumaratorId" title="Update Enum" class="btn btn-sm btn-soft-success btn-circle me-2"><i class="fas fa-edit"></i></a><span class="m-2">|</span>
                                                    <a href="../@controllerName/DeleteEnumarator?generalEnumaratorGroupId=@item.GeneralEnumaratorGroupId&generalEnumaratorIds=@item.GeneralEnumaratorId" title="Delete" class="btn btn-sm btn-soft-danger btn-circle"><i class="fas fa-trash-alt"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modelPopId" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content" id="modelPopContentId">
        </div><!--end modal-content-->
    </div><!--end modal-dialog-->
</div><!--end modal-->
