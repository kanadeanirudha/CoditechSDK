@using Coditech.Admin.Utilities;
@model GeneralRegionViewModel
@{
    ViewBag.Title = Model.GeneralRegionMasterId > 0 ? "Update Region" : "Add Region";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                        <div class="col">
                            @if (Model.GeneralRegionMasterId > 0)
                            {
                                <h4 class="card-title">Update Region</h4>
                            }
                            else
                            {
                                <h4 class="card-title">Create Region</h4>
                            }
                        </div><!--end col-->
                    </div><!--end row-->
                </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.GeneralRegionMasterId)
                            @Html.HiddenFor(m => m.IsUserDefined)
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.GeneralCountryMasterId, new { @class = "form-label required" })
                                        @*  @Html.TextBoxFor(x => x.CountryId, new { @class = "form-control"}) *@
                                        @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
                               {
                                   DropdownType = DropdownTypeEnum.Country.ToString(),
                                   DropdownName = "GeneralCountryMasterId",
                                   DropdownSelectedValue = Model.GeneralCountryMasterId
                                    .ToString()
                               })
                                        @Html.ValidationMessageFor(x => x.GeneralCountryMasterId)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.RegionName, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.RegionName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.RegionName)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.ShortName, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.ShortName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.ShortName)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.TinNumber, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.TinNumber, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.TinNumber)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.DefaultFlag, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.DefaultFlag, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
